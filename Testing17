package com.firstwap.middleware.util;

import java.util.HashMap;
import java.util.Map;

public class GSM0338Charset {
	
	private Map<Character, Integer> selectedMap;
	
	public GSM0338Charset(int selectedCharset){
		switch(selectedCharset){
			case Constants.GSM0338_BASIC_CHARSET:  selectedMap = initBasicCharset(); break; 
		}
	}
	
	public boolean isGsmSeven(char character){
		if(selectedMap.get(character) == null){
			return false;
		}else{
			return true;
		}
	}
	
