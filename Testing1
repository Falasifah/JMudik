
package com.firstwap.middleware.ejb.service;

import java.util.List;

import com.firstwap.middleware.ejb.entity.OperatorDialPrefix;
import com.firstwap.middleware.ejb.entity.ReasonMaster;
import com.firstwap.middleware.ejb.entity.SmsDispatcher;
import com.firstwap.middleware.ejb.entity.UserMessageStatus;

public interface DispatcherService {

	List<SmsDispatcher> getDispatchedMessages(int paramInt, Long lastId);

	List<SmsDispatcher> getDispatchedMessages();

	List<SmsDispatcher> getUndispatchedMessages();
	
	List<OperatorDialPrefix> getOperatorDialPrefix(String destination);
	
	boolean isInOperatorDialPrefixRange(String destination);
	
	List<UserMessageStatus> getUserMessageStatus(String messageId);
	
	ReasonMaster getReasonMaster(String errorCode);
	
	SmsDispatcher saveSmsDispacther(SmsDispatcher entity);
	
	UserMessageStatus saveUserMessageStatus(UserMessageStatus entity);
	
	void acquireSmsDispatcher();
	
	void acquireSmsDelivery(Long lastId);
	
	void releaseUnfinishedDispatchJob();
	
	void releaseUnfinishedDeliveryJob();
	
	SmsDispatcher getSmsDispatcher(SmsDispatcher smsDispatcher);
	
}
